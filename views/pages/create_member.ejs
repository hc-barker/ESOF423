<!DOCTYPE html>
<head>
	<% include ../partials/head.ejs %>
</head>

<header>
	<%include ../partials/header.ejs %>
</header>

<main>
<div class='container mt-3'>
	<h1>New Senior Center Member</h1>
	<form id='new-member-form' action='/members/create' method='POST'>
		<legend>Personal Information:</legend>
		<div class='form-group'>
			<div class='form-row'>
				<div class='col'>
					<input type="text" class='form-control' placeholder='First Name' name="firstname" required><br>
				</div>
				<div class='col'>
					<input type="text" class='form-control' placeholder='Last Name' name="lastname" required><br>
				</div>
			</div>
			*Birth date:<br>
			<input type="date" class='form-control' name="birthdate" required><br>
		</div>
		<fieldset>
			<legend>Senior Center Information</legend>
			<fieldset>
				<legend>Activity Enrollment</legend>
				<div class='custom-control custom-checkboxo mb-3'>
					<input type="checkbox" class='custom-control-input' name="activities" id='bingo' value="BINGO"></option>
					<label class='custom-control-label' for='bingo'>BINGO</label>
				</div>
				<div class='custom-control custom-checkboxo mb-3'>
					<input type="checkbox" class='custom-control-input' name="activities" id='cardgames' value="Card Games"></option>
					<label class='custom-control-label' for='cardgames'>Card Games</label>
				</div>
				<div class='custom-control custom-checkboxo mb-3'>
					<input type="checkbox" class='custom-control-input' name="activities" id='needleairs' value="Needleairs"></option>
					<label class='custom-control-label' for='needleairs'>Needleairs</label>
				</div>
				<div class='custom-control custom-checkboxo mb-3'>
					<input type="checkbox" class='custom-control-input' name="activities" id='birthdaycelebration' value="Birthday Celebration"></option>
					<label class='custom-control-label' for='birthdaycelebration'>Birthday Celebration</label>
				</div>
			</fieldset>
		</fieldset>
		<br>
		<input type="submit" class="btn btn-primary" value="Submit">
	</form>
</div>
</main>

<footer>
	<% include ../partials/footer.ejs %>
</footer>

</body>

</html>
